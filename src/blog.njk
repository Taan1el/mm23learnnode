{% extends 'src/partials/layout.njk' %}
{% block title %}Blog{% endblock %}
{% block content %}
  <div class="container">
    <h1>Blog</h1>
    <div class="row">
      {% for article in articles %}
        <div class="col-3 mb-2">
          <div class="card h-100">
            <img src="{{ article.image_url }}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">{{ article.title }}</h5>
              <p class="card-text">{{ article.summary }}</p>
              <a href="{{ article.url }}" class="btn btn-primary" target="_blank" rel="noreferrer noopener">
                Read more
              </a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}